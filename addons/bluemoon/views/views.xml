<odoo>
  <data>
    <!-- Views -->
    <record id="bluemoon.simulation_form" model="ir.ui.view">
      <field name="name">Simultaion</field>
      <field name="model">bluemoon.simulation</field>
      <field name="arch" type="xml">
        <form string="Simulation">
          <sheet>
            <group>
              <field name="user" />
              <field name="silverQuantity" />
              <field name="silverPrice" />
              <field name="total" />
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="bluemoon.simulation_tree" model="ir.ui.view">
      <field name="name">Simulations</field>
      <field name="model">bluemoon.simulation</field>
      <field name="arch" type="xml">
        <tree string="Simulation Tree">
          <field name="user" />
          <field name="silverQuantity" />
          <field name="silverPrice" />
          <field name="total" />
        </tree>
      </field>
    </record>

    <record id="bluemoon.user_form" model="ir.ui.view">
      <field name="name">User</field>
      <field name="model">bluemoon.user</field>
      <field name="arch" type="xml">
        <form string="User">
          <sheet>
            <h1>
              <field name="name"/>
            </h1>
            <group>

              <field name="email"/>
              <field name="phone"/>
              <field name="address"/>
              <field name="simulations"/>
            </group>
          </sheet>
        </form>
      </field>

    </record>

    <record id="bluemoon.user_tree" model="ir.ui.view">
      <field name="name">Users</field>
      <field name="model">bluemoon.user</field>
      <field name="arch" type="xml">
        <tree string="User Tree">
          <field name="name" />
          <field name="email" />
          <field name="phone" />
          <field name="address" />
        </tree>
      </field>
    </record>

    <record id="view_user_graph" model="ir.ui.view">
      <field name="name">user.graph</field>
      <field name="model">bluemoon.user</field>
      <field name="arch" type="xml">
        <graph string="User Simulations" type="bar">
          <field name="name"/>
          <field name="simulation_count" type="measure"/>
          <field name="email"/>
          <field name="phone"/>
          <field name="address"/>
        </graph>
      </field>
    </record>

    <record model="ir.ui.view" id="bluemoon.catalogue_tree">
      <field name="name">bluemoon.catalogue.tree</field>
      <field name="model">bluemoon.catalogue</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="material_type"/>
          <field name="price"/>
          <field name="size"/>
          <field name="silver_quality"/>
        </tree>
      </field>
    </record>


    <record model="ir.ui.view" id="bluemoon_catalogue_form">
      <field name="name">bluemoon.catalogue.form</field>
      <field name="model">bluemoon.catalogue</field>
      <field name="arch" type="xml">
        <form>
          <group colspan="2" col="2">
            <field name="name"/>
            <field name="material_type"/>
            <field name="price"/>
            <field name="size"/>
            <field name="silver_quality"/>
          </group>
        </form>
      </field>
    </record>
  </data>
</odoo>